	<?php endif; ?>
	<?php if($this->getChildHtml('product_additional_data')) : ?>
		<div class="tab-pane fade" id="tags">
		  <?php echo $this->getChildHtml('product_additional_data') ?>
		</div>
	<?php endif; ?>
    </div>
    <!-- Review Product From -->
    <?php echo $this->getChildHtml('review_product') ?>
