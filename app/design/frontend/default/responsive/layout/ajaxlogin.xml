<layout version="0.1.0">
    <default translate="label" module="page">
    
        <reference name="head">           
            <!-- ajax login css and javascript -->
            <action method="addCss"><stylesheet>css/ajaxlogin/login.css</stylesheet></action>
            <action method="addItem"><type>skin_js</type><name>js/ajaxlogin/login.js</name></action>
        </reference>    

        <!-- ajax login -->
       <reference name="root">
            <block type="core/template" name="ajax_login" template="ajaxlogin/quick.phtml" />
        </reference>
      
       
        
    </default>
        
    <customer_logged_out>
        <reference name="top.links">
            <action method="removeLinkByUrl"><url helper="customer/getAccountUrl"/></action>
            <remove name="wishlist_link" />
            <action method="addLink" translate="label title" module="customer"><label><![CDATA[<i class="register-icon fa fa-user"></i> <span class="register-text">Register</span>]]></label><url helper="customer/getRegisterUrl"/><title>Register</title><prepare/><urlParams/><position>100</position></action>
        </reference>
    </customer_logged_out>
       

</layout>